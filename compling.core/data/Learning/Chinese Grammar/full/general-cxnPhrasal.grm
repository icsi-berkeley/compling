	constructional
		constituents
			r1: Pronoun
			optional de: Associative_Marker
			r2: Dem_Num_CLS_CN
	form
		constraints
			r1.f meets de.f
			de.f meets r2.f
	meaning
		constraints
			self.m <--> r2.m
			rd <--> r2.rd
			rd.givenness <-- @Identifiable


Construction Ref_Reflexive
